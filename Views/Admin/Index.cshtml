@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-primary m-1 p-1"><h4>Roles</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div>
    <a asp-action="UserIndex">Users</a>
</div>
@*<div>
        <p class="text-info">Role Name</p>
    </div>*@
<table class="table table-sm table-bordered table-bordered">

    @*<th>Users</th>*@
    <tr><th>Role Name </th><th>User in Role</th><th>Add User</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                @*<td>@role.Id</td>*@
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Edit" asp-route-id="@role.Id" method="Post">
                        <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Edit"
                           asp-route-id="@role.Id">Add User</a>
                        @*<a class="btn btn-sm btn-danger" asp-action="Delete"
                            asp-route-id="@role.Id">Remove Role</a>*@

                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>